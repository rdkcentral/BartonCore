{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run unit tests",
            "type": "shell",
            "command": "ctest --output-on-failure --test-dir ${workspaceFolder}/build",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Run integration tests",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/ci/run_integration_tests.sh",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Run all tests",
            "dependsOrder": "sequence",
            "dependsOn": ["Run unit tests", "Run integration tests"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
