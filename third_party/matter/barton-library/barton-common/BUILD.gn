import("//build_overrides/build.gni")
import("//build_overrides/chip.gni")

import("${chip_root}/build/chip/tools.gni")
import("${chip_root}/build/config/linux/pkg_config.gni")
import("${chip_root}/src/app/chip_data_model.gni")

pkg_config("libcurl_config") {
  packages = [ "libcurl" ]
}

config("config") {
  include_dirs = [ "include" ]
}

chip_data_model("barton-common") {
  zap_file = "barton-library.zap"
  is_server = true
}

source_set("barton-deps") {
  public_configs = [ ":config" ]

  public_deps = [
    "${chip_root}/src/crypto",
    "${chip_root}/src/lib",
    "${chip_root}/third_party/jsoncpp"
  ]
}

# this offers up a fake implementation suitable for certification testing.
# we need to provide a real implementation that talks to otbr over dbus.
source_set("tbrm") {
  deps = [ ":barton-common" ]

  sources = [ "src/tbrm.cpp" ]
}
